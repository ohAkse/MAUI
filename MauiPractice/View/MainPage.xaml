<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPractice.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <StackLayout>
        <Button Text="숫자 증가하기" Command="{Binding AddCountCommand}" />
        <Label Text="{Binding AddCount}" FontSize="20" TextColor="Green" />
        <Button Text="HTTP Json 모델 얻어오기" Command="{Binding AddJsonCommand}" />
        <Label Text="{Binding JsonString}" FontSize="20" TextColor="Red" />
        </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
